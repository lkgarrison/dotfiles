# If not running interactively, don't do anything
[[ "$-" != *i* ]] && return

# custom aliases
eval 'dircolors ~/.dir_colors'
alias ls="ls --color"
alias clear='printf "\033c"'

# git aliases
alias gs="git status"
alias gd="git diff"
alias gc="git commit"
alias ga="git add"

# custom command prompt
PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u:\[\033[01;34m\]\W\[\033[00m\]\$ '
